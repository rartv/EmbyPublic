[Script]
播放解锁 = type=http-response,pattern=^https?:\/\/mb3admin.com\/admin\/service\/registration\/validateDevice,requires-body=true,max-size=0,script-path=https://raw.githubusercontent.com/rartv/EmbyPublic/test/surge/unlock.js,debug=false
添加外部播放器连接 = type=http-response,pattern=\/Users\/\w{32}\/Items\/\d+\?,requires-body=true,max-size=0,script-path=emby-plugin.js,debug=true
打开外部播放器 = type=http-response,pattern=\/plugin\/scheme,script-path=emby-plugin.js,debug=true
资源路径伪静态 = type=http-request,pattern=(\/Videos\/\d+\/stream\/.+\?.+&filename)|(\/Videos\/\d+\/\w{32}\/Subtitles\/\d+\/.+\?.+&filename),script-path=emby-plugin.js,debug=true
